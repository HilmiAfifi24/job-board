{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "src",
    "outDir": "dist",

    /* Environment Settings */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],

    /* Outputs */
    "sourceMap": true,

    /* Interop & Modules */
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
